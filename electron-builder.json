{
  "appId": "de.github.trainyourbrain",
  "productName": "Train Your Brain",
  "publish": {
    "provider": "github",
  },
  "directories": {
    "output": "release/",
    "files": [
      "!src/assets/*"
    ]
  },
    "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json"
    ],
  "win": {
    "icon": "dist/assets/icons",
    "target": [
      "portable"
    ]
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": [
      "dmg"
    ]
  },
  "linux": {
    "icon": "dist/assets/icons/",
    "target": [
      "AppImage"
    ]
  }
}
